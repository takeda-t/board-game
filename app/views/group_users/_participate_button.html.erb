<% if current_user.participate?(group) %>
    <%= form_with(model: current_user.group_users.find_by(group_id: group.id), local: true, method: :delete) do |f| %>
        <%= hidden_field_tag :group_id, group.id %>
        <%= f.submit "退会する", class: "btn btn-block btn-danger" %>
    <% end %>
<% else %>
    <%= form_with(model: current_user.group_users.build, local: true) do |f| %>
        <%= hidden_field_tag :group_id, group.id %>
        <%= f.submit "参加する", class: "btn btn-block btn-primary" %>
    <% end %>
<% end %>