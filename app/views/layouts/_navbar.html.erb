<header class="mb-4">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/">BoardGames</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        
        <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
            <% if logged_in? %>
                <ul class="navbar-nav">
                    <li class="nav-item"><%= link_to current_user.name, user_path(current_user), class: "nav-link" %></li>
                    <li class="nav-item"><%= link_to "グループ作成", new_group_path, class: "nav-link" %></li>
                    <li class="nav-item"><%= link_to "ログアウト", logout_path, method: :delete, class: "nav-link" %></li>
                </ul>
            <% else %>
                <ul class="navbar-nav" >
                    <li class="nav-item"><%= link_to "Login", login_path, class: "nav-link" %></li>
                    <li class="nav-item"><%= link_to "Signup", signup_path, class: "nav-link" %></li>
                </ul>
            <% end %>
        </div>
    </nav>
</header>